{
  "manifest_version": 3,
  "name": "Relay Auto Booker",
  "version": "1.0.0",
  "description": "Automated load monitoring and booking for Amazon Relay",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Relay Auto Booker"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.relay.amazon.com/*",
        "*://*.relay.amazon.in/*"
      ],
      "js": [
        "utils.js",
        "storage.js",
        "loadboardFastBook.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*.relay.amazon.com/*",
    "*://*.relay.amazon.in/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
