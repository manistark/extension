{
  "manifest_version": 3,
  "name": "Relay Auto Booker Refresher (Simple)",
  "version": "1.0",
  "description": "Simplified version that auto-refreshes the Amazon Relay loadboard",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://relay.amazon.in/*",
    "https://relay.amazon.com/*"
  ],
  "background": {
    "service_worker": "simple-background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://relay.amazon.in/*",
        "https://relay.amazon.com/*"
      ],
      "js": ["storage.js", "simple-content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "alert.mp3"
      ],
      "matches": [
        "https://relay.amazon.in/*",
        "https://relay.amazon.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "simple-popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}